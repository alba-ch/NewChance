<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:paddingBottom="15dp"
    android:paddingTop="20dp"
    android:background="@drawable/item_border"
    android:foreground="@drawable/item_border" android:layout_height="140dp" android:layout_width="match_parent">


<TextView
        android:id="@+id/p4_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roquetes Asylum"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p4_item_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address"
        app:layout_constraintStart_toStartOf="@+id/p4_item_name"
        app:layout_constraintTop_toBottomOf="@+id/p4_item_name" />

    <TextView
        android:id="@+id/p4_item_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_semilight"
        android:textStyle="italic"
        android:text="Schedule"
        app:layout_constraintStart_toStartOf="@+id/p4_item_direction"
        app:layout_constraintTop_toBottomOf="@+id/p4_item_direction" />
</androidx.constraintlayout.widget.ConstraintLayout>